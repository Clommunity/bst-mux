			newUser.$save();

			$scope.list();
		};

		$scope.update = function(idx) {
			$scope.selected = null
			var user = $scope.users[idx];
			$scope.edit = user
			/*
			user.name = name;
			user.email = email;
			user.$save();
			*/
			//$scope.list(idx);
		};

		$scope.remove = function(idx){
			User.remove({name: $scope.users[idx].Name}, function(data){
				$scope.selected = null;
				$scope.list();
			})
		};
	}]);
</script>
</body>
</html>
