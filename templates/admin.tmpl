<!doctype html>
<html lang="en" ng-app="myapp">
<head>
	<meta charset="UTF-8">
	<title>BST</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootswatch/3.1.0/flatly/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>
<script src="http://code.angularjs.org/1.2.10/angular.min.js"></script>
<body ng-controller="MainCtl">
	<div class="jumbotron">
		<a href="/logout">
		<button class="btn pull-right">Logout</button>
		</a>
		<button class="btn btn-primary pull-right" ng-click="add()">
			<i class="fa fa-plus"></i> Add user
		</button>
		<h1>Administrative System</h1>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-3 well">
				<h3>Users</h3>
				<ul class="nav nav-pills nav-stacked">
					<li ng-class="{active: u.Name == selected.Name}" ng-repeat="u in users">
						<a href="" ng-click="get($index)">{{u.Name}}</a>
					</li>
				</ul>
			</div>
			<div class="col-sm-6" ng-show="selected">
				<h2>{{selected.Name}}</h2>
				<dl class="dl-horizontal">
					<dt>Email:</dt>
					<dd>{{selected.Email}}</dd>
				</dl>
				<dl class="dl-horizontal">
					<dt>HomePath:</dt>
					<dd>{{selected.HomePath}}</dd>
				</dl>
				<dl class="dl-horizontal">
					<dt>GUI Port:</dt>
					<dd>{{selected.GuiPort}}</dd>
				</dl>
				<dl class="dl-horizontal">
					<dt>Listen Port:</dt>
					<dd>{{selected.ListenPort}}</dd>
				</dl>
				<dl class="dl-horizontal">
					<dt>Group:</dt>
					<dd>{{selected.Group}}</dd>
				</dl>
				<dl class="dl-horizontal">
					<dt>Status:</dt>
					<dd>{{selected.Status}}</dd>
				</dl>
			</div>
			<div class="col-sm-3" ng-show="selected">
				<button class="btn btn-primary form-control" ng-click="update(selected.idx)">
					<i class="fa fa-pencil"></i> Update this User
				</button>
				<button class="btn btn-danger form-control" ng-click="remove(selected.idx)">
					<i class="fa fa-trash-o"></i> Remove this User
				</button>
			</div>
		</div>
		<div class="modal hide fade" id="editModal" role='dialog'>
			<div class='modal-header'>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h3 ng-hide='newUser'>Edit User: {{selected.Name}}</h3>
				<h3 ng-show='newUser'>New User</h3>
			</div>
			<form>
				<fieldset>
					<div class='modal-body'>
						<label>Name</label>
						<input type='text' ng-model="selected.Name"/>
						<label>Email</label>
						<input type='text' ng-model="selected.Email"/>
						<label>GUI Port</label>
						<input type='text' ng-model="selected.Guiport"/>
						<label>Listen Port</label>
						<input type='text' ng-model="selected.Listenport"/>
						<label>Group</label>
						<input type='text' ng-model="selected.Group"/>
						<label>Status</label>
						<input type='text' ng-model="selected.Status"/>
						<label>Options</label>
						<div ng-repeat="vo in selected.voteoptions">
							<input type='text' ng-model="vo.name"/>
							<i class="icon-trash" ng-click='removeVoteOption(vo)'></i>
						</div>
					</div>
					<div class='modal-footer'>
						<button type='submit' class="btn btn-danger" data-dismiss="modal" ng-click="delete()">Delete</button>
						<button type='submit' class="btn btn-primary" data-dismiss="modal" ng-click="save()">Save</button>
					</div>
				</fieldset>
			</form>		
		</div>
	</div>
<script src="http://code.angularjs.org/1.2.10/angular-resource.min.js"></script>
<script>
	var myapp = new angular.module("myapp", ["ngResource"]);

	myapp.controller("MainCtl", ["$scope", "$resource", function($scope, $resource){

		var User = $resource("/admin/user/:name", {name: '@name'}, {});

		$scope.selected = null;

		$scope.list = function(idx){
			User.query(function(data){
				console.log(data)
				$scope.users = data;
				if(idx != undefined) {
					$scope.selected = $scope.users[idx];
					$scope.selected.idx = idx;
				}
			}, function(error){
				alert(error.data);
			});
		};

		$scope.list();

		$scope.get = function(idx){
			User.get({name: $scope.users[idx].Name}, function(data){
				$scope.selected = data;
				$scope.selected.idx = idx;
			});
		};

		$scope.add = function() {
			var title = prompt("Enter the user's name.");
			if(title == null){
				return;
			}
			var author = prompt("Enter the user's email.");
			if(author == null){
				return;
			}
			// Creating a blank book object means you can still $save
			var newUser = new User();
			newUser.name = name;
			newUser.email = email;
			newUser.$save();

			$scope.list();
		};

		$scope.update = function(idx) {
			var user = $scope.users[idx];
			var name = prompt("Enter a new name", user.title);
			if(name == null) {
				return;
			}
			var email = prompt("Enter a new email", user.email);
			if(email == null) {
				return;
			}
			user.name = name;
			user.email = email;
			user.$save();

			$scope.list(idx);
		};

		$scope.remove = function(idx){
			$scope.users[idx].$delete();
			$scope.selected = null;
			$scope.list();
		};
	}]);
</script>
</body>
</html>
